x="1" && z="$(ls -l 02-*.mp3 | wc -l | tr -d ' ')"; for y in 02-*.mp3; do eyeD3 --itunes --set-encoding=utf8 -n "$x" -N "$z" "$y"; x=$[$x+1]; done
x="1" && z="$(ls -l 03-*.mp3 | wc -l | tr -d ' ')"; for y in 03-*.mp3; do eyeD3 --itunes --set-encoding=utf8 -n "$x" -N "$z" "$y"; x=$[$x+1]; done
x="1" && z="$(ls -l 04-*.mp3 | wc -l | tr -d ' ')"; for y in 04-*.mp3; do eyeD3 --itunes --set-encoding=utf8 -n "$x" -N "$z" "$y"; x=$[$x+1]; done
for x in 01-*.mp3; do eyeD3 --itunes --set-encoding=utf8 -d "01" -D "04" "$x"; done
for x in 02-*.mp3; do eyeD3 --itunes --set-encoding=utf8 -d "02" -D "04" "$x"; done
for x in 03-*.mp3; do eyeD3 --itunes --set-encoding=utf8 -d "03" -D "04" "$x"; done
for x in 04-*.mp3; do eyeD3 --itunes --set-encoding=utf8 -d "04" -D "04" "$x"; done
for x in *.mp3; do y=`echo $x | sed 's/......\(.*\)/\1/' | sed 's/.mp3//g' | sed 's/.mp3//g' | sed 's@_@/@g' | sed 's/¿/?/g'`; eyeD3 --itunes --set-encoding=utf8 -t "$y" "$x"; done
elif [ -f 03-01\ *.mp3 ]; then
x="1" && z="$(ls -l 01-*.mp3 | wc -l | tr -d ' ')"; for y in 01-*.mp3; do eyeD3 --itunes --set-encoding=utf8 -n "$x" -N "$z" "$y"; x=$[$x+1]; done
x="1" && z="$(ls -l 02-*.mp3 | wc -l | tr -d ' ')"; for y in 02-*.mp3; do eyeD3 --itunes --set-encoding=utf8 -n "$x" -N "$z" "$y"; x=$[$x+1]; done
x="1" && z="$(ls -l 03-*.mp3 | wc -l | tr -d ' ')"; for y in 03-*.mp3; do eyeD3 --itunes --set-encoding=utf8 -n "$x" -N "$z" "$y"; x=$[$x+1]; done
for x in 01-*.mp3; do eyeD3 --itunes --set-encoding=utf8 -d "01" -D "03" "$x"; done
for x in 02-*.mp3; do eyeD3 --itunes --set-encoding=utf8 -d "02" -D "03" "$x"; done
for x in 03-*.mp3; do eyeD3 --itunes --set-encoding=utf8 -d "03" -D "03" "$x"; done
for x in *.mp3; do y=`echo $x | sed 's/......\(.*\)/\1/' | sed 's/.mp3//g' | sed 's/.mp3//g' | sed 's@_@/@g' | sed 's/¿/?/g'`; eyeD3 --itunes --set-encoding=utf8 -t "$y" "$x"; done
elif [ -f 02-01\ *.mp3 ]; then
x="1" && z="$(ls -l 01-*.mp3 | wc -l | tr -d ' ')"; for y in 01-*.mp3; do eyeD3 --itunes --set-encoding=utf8 -n "$x" -N "$z" "$y"; x=$[$x+1]; done
x="1" && z="$(ls -l 02-*.mp3 | wc -l | tr -d ' ')"; for y in 02-*.mp3; do eyeD3 --itunes --set-encoding=utf8 -n "$x" -N "$z" "$y"; x=$[$x+1]; done
for x in 01-*.mp3; do eyeD3 --itunes --set-encoding=utf8 -d "01" -D "02" "$x"; done
for x in 02-*.mp3; do eyeD3 --itunes --set-encoding=utf8 -d "02" -D "02" "$x"; done
for x in *.mp3; do y=`echo $x | sed 's/......\(.*\)/\1/' | sed 's/.mp3//g' | sed 's/.mp3//g' | sed 's@_@/@g' | sed 's/¿/?/g'`; eyeD3 --itunes --set-encoding=utf8 -t "$y" "$x"; done
elif [ -f 01\ *.mp3 ]; then
x="1" && z="$(ls -l *.mp3 | wc -l | tr -d ' ')"; for y in *.mp3; do eyeD3 --itunes --set-encoding=utf8 -n "$x" -N "$z" "$y"; x=$[$x+1]; done
for x in *.mp3; do eyeD3 --itunes --set-encoding=utf8 -d "01" -D "01" "$x"; done
for x in *.mp3; do y=`echo $x | sed 's/...\(.*\)/\1/' | sed 's/.mp3//g' | sed 's/.mp3//g' | sed 's@_@/@g' | sed 's/¿/?/g'`; eyeD3 --itunes --set-encoding=utf8 -t "$y" "$x"; done
fi
